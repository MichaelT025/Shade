{
  "name": "ghostpad",
  "version": "0.1.0",
  "description": "GhostPad - Windows desktop application with translucent overlay for AI-powered screen assistance",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "start": "electron .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "electron",
    "ai",
    "gemini",
    "screen-capture"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "32.2.7",
    "electron-builder": "^26.0.12",
    "openai": "^6.10.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "vite": "^7.2.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.0.11",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
