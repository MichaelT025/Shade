{
  "name": "shade",
  "version": "0.11.4",
  "description": "Shade - Your screen, smarter. A Windows desktop overlay for AI-powered screen assistance.",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "start": "electron .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "electron",
    "ai",
    "gemini",
    "screen-capture"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.shade.app",
    "productName": "Shade",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/services/**/*",
      "src/renderer/assets/icons/custom-icons/**/*",
      "dist/renderer/**/*",
      "package.json",
      "build/icon.ico"
    ],
    "npmRebuild": false,
    "asar": true,
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ],
      "verifyUpdateCodeSignature": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "MichaelT025",
        "repo": "Shade",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@highlightjs/cdn-assets": "11.9.0",
    "dompurify": "3.0.6",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "highlight.js": "11.9.0",
    "katex": "0.16.9",
    "marked": "11.0.0",
    "openai": "^6.10.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@emnapi/core": "^1.7.1",
    "@emnapi/runtime": "^1.7.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "electron": "^32.2.7",
    "electron-builder": "^26.0.12",
    "to-ico": "^1.1.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
